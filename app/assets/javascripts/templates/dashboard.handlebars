<div class="row" id="navigation">
  {{#link-to 'dashboard' class="navbar-brand" }}YourPublicReportCard{{/link-to}}
</div>
<div class="row">
  <div class="sidebar-image">
    <img {{bind-attr src="image"}} alt="Logo" class="img-responsive center-block">
  </div>
  <div class="sidebar-panel">
    <div class="header">
      {{name}}
    </div>
    <div>
      <p class="lead">
        <a target="_blank" {{bind-attr href="targetUrl"}}>{{nickname}}</a>
      </p>
      <p class="lead">
        {{userLeader}}
      </p>
    </div>
    <div>rating</div>
    <ul class="nav nav-pills nav-justified">
      <li>
        {{#link-to 'dashboard' class="btn-default"}}Follow{{/link-to}}
      </li>
      <li>
        {{#link-to 'dashboard' class="btn-primary"}}Chat{{/link-to}}
      </li>
    </ul>
  </div>
  <div class="sidebar-list">
    <div class="sidebar-list-item">
      <h3>Activity</h3>
    </div>
    <div class="sidebar-list-item">
      <span>Sign In Count: </span>
      <a href="#" >{{sign_in_count}}</a>
    </div>
    <div class="sidebar-list-item">
      <span>{{provider}} uid: </span>
      <span>{{uid}}</span>
    </div>
    <div class="sidebar-list-item">
      <span>Contact: </span>
      <a href="#">{{email}}</a>
    </div>

    <div class="sidebar-list-item">
      <span>Member Since: </span>
      <a href="#">{{created_at}}</a>
    </div>
  </div>
</div>





