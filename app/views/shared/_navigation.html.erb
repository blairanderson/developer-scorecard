<div class="row" id="navigation">
  <div class="col-sm-3">
    <ul class="nav nav-justified">
      <li><a href="#" class="user"><span></span></a></li>
      <li><a href="#" class="connections"><span></span></a></li>
      <li><a href="#" class="stats"><span></span></a></li>
    </ul>
  </div>
  <div class="col-sm-6">
    <form class="navbar-form" role="search">
      <div class="form-group">
        <input type="search" class="form-control" placeholder="Search">
      </div>
      <button type="submit" class="btn btn-default">Go!</button>
    </form>
  </div>
  <div class="col-sm-3">
    <% if user_signed_in? %>
      <ul class="nav dropdown">
        <li>
          <a class="dropdown-trigger" id="dropdownMenu1" data-target="#" data-toggle="dropdown">
            <%= current_user.name %>
            <span class="caret"></span>
            <%= image_tag current_user.image, style: 'width: 50px; height: 48px;' %>
          </a>
        </li>
      </ul>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
          <li role="presentation">
            <%= link_to 'Logout', logout_path, method: :delete, tabindex: '-1', role: 'menuitem' %>
          </li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Invite a Friend</a></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Settings</a></li>
          <li role="presentation" class="divider"></li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#">Separated link</a></li>
        </ul>
      </ul>
    <% else %>
      <ul class="nav nav-justified">
        <li>
          <%= render "devise/shared/links", options: {class: ""} %>
        </li>
      </ul>

    <% end %>
  </div>
</div>